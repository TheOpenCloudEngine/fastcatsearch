<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<schema>
    <field-list>
        <field id="CODE" type="ASTRING" name="코드" size="17" multiValueDelimiter=""/>
        <field id="SECTIONCODE" type="ASTRING" name="섹션코드" size="1" multiValueDelimiter=""/>
        <field id="CATEGORY" type="STRING" name="카테고리" multiValueDelimiter=""/>
        <field id="TITLE" type="STRING" name="제목" multiValueDelimiter=""/>
        <field id="USERID" type="STRING" name="사용자아이디" multiValueDelimiter=""/>
        <field id="USERNAME" type="STRING" name="사용자이름" multiValueDelimiter=""/>
        <field id="CONTENT" type="STRING" name="기사내용" removeTag="true" multiValueDelimiter=""/>
        <field id="REGDATE" type="DATETIME" name="등록일" multiValueDelimiter=""/>
        <field id="UPDATEDATE" type="DATETIME" name="수정일" multiValueDelimiter=""/>
        <field id="FILENAME" type="ASTRING" name="파일명" multiValueDelimiter=""/>
    </field-list>
    <primary-key>
        <field ref="CODE"/>
    </primary-key>
    <index-list>
        <index id="TITLE" name="제목" queryAnalyzer="KOREAN" ignoreCase="true">
            <field indexAnalyzer="KOREAN" ref="TITLE"/>
        </index>
        <index id="CONTENT" name="기사내용" queryAnalyzer="KOREAN" ignoreCase="true" storePosition="true" positionIncrementGap="100">
            <field indexAnalyzer="KOREAN" ref="CONTENT"/>
        </index>
        <index id="TITLECONTENT" name="제목 및 기사내용" queryAnalyzer="KOREAN" ignoreCase="true" storePosition="true" positionIncrementGap="100">
            <field indexAnalyzer="KOREAN" ref="TITLE"/>
            <field indexAnalyzer="KOREAN" ref="CONTENT"/>
        </index>
        <index id="USERID" name="사용자아이디" queryAnalyzer="KOREAN" ignoreCase="true">
            <field indexAnalyzer="KOREAN" ref="USERID"/>
        </index>
        <index id="USERNAME" name="사용자이름" queryAnalyzer="KOREAN">
            <field indexAnalyzer="KOREAN" ref="USERNAME"/>
        </index>
    </index-list>
    <analyzer-list>
        <analyzer id="KOREAN" corePoolSize="1" maximumPoolSize="5" className="KOREAN.STANDARD"/>
        <analyzer id="KEYWORD" corePoolSize="0" maximumPoolSize="5" className="BASIC.KEYWORD"/>
    </analyzer-list>
    <field-index-list>
        <field-index id="SECTIONCODE" name="SectionCode_index" ref="SECTIONCODE"/>
        <field-index id="REGDATE" name="RegDate_index" ref="REGDATE"/>
        <field-index id="UPDATEDATE" name="UpdateDate_index" ref="UPDATEDATE"/>
    </field-index-list>
    <group-index-list>
        <group-index id="CATEGORY" name="Category_group" ref="CATEGORY"/>
        <group-index id="USERID" name="UserID_group" ref="USERID"/>
    </group-index-list>
</schema>
